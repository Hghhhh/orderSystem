<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yidong.mapper.CommentMapper" >
  <resultMap id="BaseResultMap" type="Comment" >
  <id column="id" property="id" jdbcType="VARCHAR" />
  <result column="star" property="star" jdbcType="INTEGER" />
  <result column="comment" property="comment" jdbcType="VARCHAR" />
  <result column="goodsId" property="goodsId" jdbcType="VARCHAR"/>
    <result column="createTime" property="createTime" jdbcType="VARCHAR"/>
    <result column="state" property="state" jdbcType="INTEGER"/>
  <association property="user" column="userId" select="getUser">
  </association>
  </resultMap>
  <select id="getUser" resultType="User" parameterType="java.lang.String" >
    select id,account,name from tb_user where id=#{userId,jdbcType=VARCHAR}
  </select>
  <sql id="Base_Column_List" >
    id, star, comment, userId,goodsId,createTime,state
  </sql>
  <select id="selectByGoodsId" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from tb_comment
    where goodsId = #{goodsId,jdbcType=VARCHAR} and state != 3 and star &gt;= 4
  </select>
  <select id="selectByUserId" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select
    <include refid="Base_Column_List" />
    from tb_comment
    where userId = #{userId,jdbcType=VARCHAR}  and state != 3
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.String" >
    delete from tb_comment
    where id = #{id,jdbcType=VARCHAR}
  </delete>
  <insert id="insert" parameterType="map" >
    insert into tb_comment (id, star, comment, 
      userId, goodsId,createTime)
    values (#{id,jdbcType=VARCHAR}, #{star,jdbcType=INTEGER}, #{comment,jdbcType=VARCHAR}, 
      #{userId,jdbcType=VARCHAR}, #{goodsId,jdbcType=VARCHAR},now())
  </insert>
</mapper>